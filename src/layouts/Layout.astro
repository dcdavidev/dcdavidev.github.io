---
import '@fontsource/momo-trust-display';
import '@fontsource/momo-trust-sans';

import '../styles/global.css';

import { JoyThemeProvider } from '../components/theme/joy';
import { MuiThemeProvider } from '../components/theme/mui';

interface Props {
	lang?: string;
	title?: string;
	description?: string;
	alternateUrls?: Record<string, string>;
	ogImage?: string;
	ogType?: string;
}

// Get user language from browser Accept-Language header
const acceptLanguage = Astro.request.headers.get('accept-language');
const browserLang = acceptLanguage?.split(',')[0].split('-')[0] || 'it';

const {
	lang = browserLang,
	title,
	description = 'Full-Stack Developer & Dev Tooling Specialist.',
	alternateUrls = {},
	ogImage = '/assets/og/20251115.webp',
	ogType = 'website',
} = Astro.props;

const canonicalURL = Astro.site
	? new URL(Astro.url.pathname, Astro.site)
	: undefined;

const fullTitle = title
	? `${title} | Davide Di Criscito`
	: 'Davide Di Criscito';

// Generate alternate language links
const alternateLinks = Object.entries(alternateUrls).map(([locale, url]) => ({
	locale,
	url: new URL(url, Astro.site).href,
}));

// Generate alternate locales for Open Graph
const alternateLocales = Object.keys(alternateUrls)
	.filter((locale) => locale !== lang)
	.map((locale) => (locale === 'it' ? 'it_IT' : 'en_US'));
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />

		{canonicalURL && <link rel="canonical" href={canonicalURL} />}

		<!-- Alternate language versions for SEO -->
		<!-- eslint-disable-next-line @eslint-react/no-missing-key -->
		{
			alternateLinks.map(({ locale, url }) => (
				<link rel="alternate" hreflang={locale} href={url} />
			))
		}
		{
			alternateUrls['it'] && (
				<link
					rel="alternate"
					hreflang="x-default"
					href={new URL(alternateUrls['it'], Astro.site).href}
				/>
			)
		}

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, Astro.site)} />
		<meta property="og:locale" content={lang === 'it' ? 'it_IT' : 'en_US'} />
		<!-- eslint-disable-next-line @eslint-react/no-missing-key -->
		{
			alternateLocales.map((locale) => (
				<meta property="og:locale:alternate" content={locale} />
			))
		}

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={fullTitle} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
		<link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
		<link
			rel="icon"
			type="image/png"
			href="/android-chrome-192x192.png"
			sizes="192x192"
		/>
		<link
			rel="icon"
			type="image/png"
			href="/android-chrome-512x512.png"
			sizes="512x512"
		/>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>
		<meta name="description" content={description} />

		<!-- Additional SEO meta tags -->
		<meta name="robots" content="index, follow" />
		<meta name="language" content={lang} />
		<meta name="author" content="Davide Di Criscito" />
	</head>
	<body class="cc--dark-turquoise">
		<MuiThemeProvider client:load>
			<JoyThemeProvider client:load>
				<slot />
			</JoyThemeProvider>
		</MuiThemeProvider>
	</body>
</html>

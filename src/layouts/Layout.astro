---
import '@fontsource/momo-trust-display';
import '@fontsource/momo-trust-sans';

import '../styles/global.css';

import { JoyThemeProvider } from '../components/theme/joy';
import { MuiThemeProvider } from '../components/theme/mui';

interface Props {
	lang?: string;
	title?: string;
	description?: string;
}

// Get user language from browser Accept-Language header
const acceptLanguage = Astro.request.headers.get('accept-language');
const browserLang = acceptLanguage?.split(',')[0].split('-')[0] || 'en';

const {
	lang = browserLang,
	title,
	description = 'Full-Stack Developer & Dev Tooling Specialist.',
} = Astro.props;

const canonicalURL = Astro.site
	? new URL(Astro.url.pathname, Astro.site)
	: undefined;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />

		{canonicalURL && <link rel="canonical" href={canonicalURL} />}

		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
		<link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
		<link
			rel="icon"
			type="image/png"
			href="/android-chrome-192x192.png"
			sizes="192x192"
		/>
		<link
			rel="icon"
			type="image/png"
			href="/android-chrome-512x512.png"
			sizes="512x512"
		/>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="generator" content={Astro.generator} />
		<title>
			{title ? `${title} | Davide Di Criscito` : 'Davide Di Criscito'}
		</title>
		<meta name="description" content={description} />
	</head>
	<body class="cc--dark-turquoise">
		<MuiThemeProvider client:load>
			<JoyThemeProvider client:load>
				<slot />
			</JoyThemeProvider>
		</MuiThemeProvider>
	</body>
</html>

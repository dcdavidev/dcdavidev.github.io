---
import Box from '../../components/ui/Box/Box.astro';
import Divider from '../../components/ui/Divider/Divider.astro';
import Header from '../../components/ui/Header/Header.astro';
import Select from '../../components/ui/Select/Select.astro';
import Typography from '../../components/ui/Typography/Typography.astro';
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

// Get user language from browser Accept-Language header
const acceptLanguage = Astro.request.headers.get('accept-language');
const browserLang = acceptLanguage?.split(',')[0].split('-')[0] || 'en';

const languageOptions = [
	{ value: 'it', label: 'Italiano' },
	{ value: 'en', label: 'English' },
];
---

<Layout>
	<Header>
		<Typography variant="h1" shadow={false} gutterBottom>
			Privacy Policy
		</Typography>

		<Box>
			<Select color="primary" options={languageOptions} value={browserLang} />
		</Box>
	</Header>

	<Divider variant="wave" theme="dark" color="primary" />
</Layout>
